{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Grpc - Software architecture",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "buildSoftwareArchitecture",
            "program": "${workspaceFolder}/software-architecture/bin/Debug/net10.0/software-architecture.dll",
            "args": [],
            "cwd": "${workspaceFolder}/software-architecture",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7800",
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}
